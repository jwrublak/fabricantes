<p id="notice"><%= notice %></p>

<h1>Produtos do fabricante <%=@fabricante.nome%></h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fabricante.produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.codigo %></td>
        <td><%= link_to 'Show', fabricante_produto_path(@fabricante, produto) %></td>
        <td><%= link_to 'Edit', edit_fabricante_produto_path(@fabricante, produto) %></td>
        <td><%= link_to 'Destroy', fabricante_produto_path(@fabricante, produto), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Adicionar Produto', new_fabricante_produto_path %> |
<%= link_to 'Back', fabricante_path(@fabricante) %>